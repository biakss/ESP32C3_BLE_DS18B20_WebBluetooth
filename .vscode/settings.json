{
  // –ê–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Ñ–∞–π–ª–æ–≤
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2500,

  // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏–π commit + push –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏ –ª—é–±–æ–≥–æ —Ñ–∞–π–ª–∞
  "emeraldwalk.runonsave": {
    "commands": [
